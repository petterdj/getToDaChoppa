            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-c",
                "main.cpp",
                "-o",
                ".\\bin\\main.o",
            ],
            "group": {
                "isDefault": true,
                "kind": "build"
            }
        },
        {
